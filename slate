# Global Config
config defaultToCurrentScreen true
config focusPreferSameApp true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config switchShowTitles true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true
config windowHintsDuration 5
config windowHintsShowIcons true

# Aliases
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias topright corner top-right resize:screenSizeX/3;screenSizeY/3

alias showHintsLeftHand hint AOEUIYQJKX
alias showNormalHint hint AOEUIDHTNSYXFBPKGMCW

# Hyper key 
alias hyper ctrl;shift;alt;cmd

# Resize Bindings
bind right:alt       resize +10% +0    # moves right side to the right
bind left:alt        resize -10% +0  # moves right side to the left 
bind up:alt          resize +0   -10%  #moves bottom side up 
bind down:alt        resize +0   +10%   #moves bottom side down 

#TODO rebind this section 
